{
  "name": "cattos",
  "version": "0.1.0",
  "description": "Cattos - A Twitter-like app for cat photos and interactions",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "stop": "cmd /c \"taskkill /F /IM node.exe || echo No Node processes running\"",
    "build": "turbo run build",
    "prod": "yarn build && yarn start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "5.3.3"
  },
  "packageManager": "yarn@1.22.17"
}
