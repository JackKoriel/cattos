{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cattos/ui": ["../../packages/ui/src"],
      "@cattos/shared": ["../../packages/shared/src"]
    }
  },
  "include": ["src", "../../packages/ui/src", "../../packages/shared/src"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**", "src/**/*.test.*", "src/**/*.spec.*"]
}
